<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn8"
        android:layout_width="49dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/btn7"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/btn7"
        android:layout_toEndof="@id/btn7"
        android:text="8" />

    <Button
        android:id="@+id/btn9"
        android:layout_width="49dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/btn8"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/btn8"
        android:layout_toEndof="@id/btn8"
        android:text="9" />

    <Button
        android:id="@+id/btn6"
        android:layout_width="49dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_alignEnd="@id/btn7"
        android:layout_below="@id/btn7"

        android:text="6" />

    <Button
        android:id="@+id/btn5"
        android:layout_width="49dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_alignEnd="@id/btn8"
        android:layout_below="@id/btn8"

        android:text="5" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="49dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_alignEnd="@id/btn9"
        android:layout_below="@id/btn9"

        android:text="4" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="49dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_alignEnd="@id/btn6"
        android:layout_below="@id/btn6"

        android:text="3" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="49dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_alignEnd="@id/btn5"
        android:layout_below="@id/btn5"

        android:text="2" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="49dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_alignEnd="@id/btn4"
        android:layout_below="@id/btn4"

        android:text="1" />

    <Button
        android:id="@+id/btn0"
        android:layout_width="49dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_alignEnd="@id/btn3"
        android:layout_below="@id/btn3"

        android:text="0" />

    <Button
        android:id="@+id/btndot"
        android:layout_width="49dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_alignEnd="@id/btn2"
        android:layout_below="@id/btn2"

        android:text="." />

    <Button
        android:id="@+id/btnequal"
        android:layout_width="49dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_alignEnd="@id/btn1"
        android:layout_below="@id/btn1"

        android:text="=" />

    <Button
        android:id="@+id/btn7"
        android:layout_width="49dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="13dp"
        android:layout_marginLeft="13dp"
        android:text="7" />
</RelativeLayout>